<%- model_class = Salon -%>
<div class="page-header">
  <h1><%=t '.title', :default => Salon %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @salon.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @salon.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:established_on) %></dt>
      <dd><pre class="prettyprint"><%= @salon.established_on %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_at) %></dt>
      <dd><pre class="prettyprint"><%= @salon.start_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:close_at) %></dt>
      <dd><pre class="prettyprint"><%= @salon.close_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lunch_hour) %></dt>
      <dd><pre class="prettyprint"><%= @salon.lunch_hour %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              salons_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_salon_path(@salon), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              salon_path(@salon),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

